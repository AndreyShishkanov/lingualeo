<Window x:Class="LinguaLeo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LinguaLeo"
        mc:Ignorable="d"
        Title="LinguaLeoWordsLoader" Height="500" Width="200">
    <Grid>
        <Button FontWeight="ExtraBold" Foreground="White" FontSize="20" FontFamily="Calibri"  Background="ForestGreen" ContentStringFormat="3erge" Content="Load excel" HorizontalAlignment="Center" Margin="0,-390,0,0" VerticalAlignment="Center" Width="140" Height="56" Click="button_Click" />
        <ProgressBar Foreground="ForestGreen" HorizontalAlignment="Center" Height="30" Margin="0,-280,0,0" VerticalAlignment="Center" Width="140" ValueChanged="ProgressBar_ValueChanged" Name="ProgressBar1"/>
        <TextBox Name="textBox" HorizontalAlignment="Center" Height="321" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="140" TextChanged="textBox_TextChanged"/>

    </Grid>
</Window>
    
